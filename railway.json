{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "uvicorn backend.main:app --host 0.0.0.0 --port $PORT --workers 2",
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  },
  "variables": {
    "PYTHON_VERSION": "3.11",
    "ENVIRONMENT": "production",
    "USE_LOCAL_LLM": "true",
    "FASTAPI_ENV": "production"
  },
  "regions": ["us-west1"],
  "resources": {
    "memory": 2048,
    "cpu": 1
  }
}